# LLM provider: openai | ollama | transformers
LLM_PROVIDER=openai

# OpenAI (if using openai)
OPENAI_API_KEY=sk-...

# OpenAI model (or your preferred hosted model)
OPENAI_MODEL=gpt-4o-mini

# Ollama (if using local server: https://ollama.com)
OLLAMA_MODEL=llama3.1:8b
OLLAMA_BASE_URL=http://localhost:11434

# Transformers local model (CPU-only example)
TRANSFORMERS_MODEL=mistralai/Mistral-7B-Instruct-v0.2

